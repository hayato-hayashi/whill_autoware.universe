<launch>
  <arg name="launch_driver"/>
  <arg name="sensor_model"/>
  <arg name="vehicle_param_file"/>
  <arg name="vehicle_mirror_param_file"/>
  <arg name="pointcloud_container_name"/>

  <let name="sensor_launch_pkg" value="$(find-pkg-share $(var sensor_model)_launch)"/>

  <group>
    <push-ros-namespace namespace="sensing"/>

    <!-- Driver -->
    <include file="$(var sensor_launch_pkg)/launch/sensing.launch.xml">
      <arg name="launch_driver" value="$(var launch_driver)"/>
      <arg name="vehicle_info_param_file" value="$(var vehicle_param_file)"/>
      <arg name="vehicle_mirror_param_file" value="$(var vehicle_mirror_param_file)"/>
      <arg name="pointcloud_container_name" value="$(var pointcloud_container_name)"/>
    </include>
  </group>
</launch>
